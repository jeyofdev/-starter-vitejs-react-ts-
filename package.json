{
	"name": "starter-vitejs-react-ts",
	"private": true,
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite --open --port 8080",
		"build": "tsc && vite build",
		"preview": "vite preview",
		"lint": "eslint . --fix --max-warnings=0",
		"prepare": "husky install",
		"test": "vitest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeyofdev/starter-vitejs-react-ts.git"
	},
	"keywords": [
		"javascript",
		"js",
		"vitejs",
		"react",
		"eslint",
		"prettier",
		"vitest",
		"typescript",
		"husky"
	],
	"author": "jeyofdev <jgregoire.pro@gmail.com>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jeyofdev/starter-vitejs-react-ts/issues"
	},
	"dependencies": {
		"@vitejs/plugin-react": "^3.1.0",
		"eslint-config-airbnb-typescript": "^17.0.0",
		"eslint-import-resolver-alias": "^1.1.2",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"vite": "^4.2.0",
		"vitest": "^0.30.1"
	},
	"devDependencies": {
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"eslint": "^8.38.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jsx-a11y": "^6.7.1",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.1",
		"prettier": "^2.8.7",
		"typescript": "^4.9.3"
	},
	"hooks": {
		"pre-commit": "eslint . --fix --max-warnings=0"
	},
	"lint-staged": {
		"*.{js,ts,tsx,jsx}": [
			"prettier --write",
			"eslint --max-warnings=0"
		],
		"*.{js,css,md,html,json}": "prettier --cache --write"
	}
}
